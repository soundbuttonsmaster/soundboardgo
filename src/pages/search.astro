---
import Layout from '@/layouts/Layout.astro';
import SoundGrid from '@/components/SoundGrid';
import SearchSection from '@/components/SearchSection';
import { soundService } from '@/services/sound.service';
import type { SoundButton as SoundButtonType } from '@/types';

const { q, category, tag } = Astro.url.searchParams;
const searchQuery = q || '';
const categoryFilter = category || tag || '';
// Parse category as number if it's a valid number (category_id), otherwise treat as string (category name)
const categoryId = category && !isNaN(Number(category)) ? parseInt(category) : null;

let searchResults: SoundButtonType[] = [];

try {
  if (categoryId) {
    // Fetch sounds by category_id
    searchResults = await soundService.getSounds({ category: categoryId });
    
    // If there's also a search query, filter the results
    if (searchQuery) {
      searchResults = searchResults.filter((sound) => 
        sound.name.toLowerCase().includes(searchQuery.toLowerCase()) ||
        (sound.tag && sound.tag.toLowerCase().includes(searchQuery.toLowerCase()))
      );
    }
  } else if (searchQuery) {
    if (categoryFilter) {
      // Search within a specific category/tag (by name)
      const allCategorySounds = await soundService.getSoundsByTag(categoryFilter);
      // Filter by search query (client-side filtering, or enhance backend to support both)
      searchResults = allCategorySounds.filter((sound) => 
        sound.name.toLowerCase().includes(searchQuery.toLowerCase()) ||
        (sound.tag && sound.tag.toLowerCase().includes(searchQuery.toLowerCase()))
      );
    } else {
      // Use the new search API endpoint
      const result = await soundService.searchSoundsByName(searchQuery, 1, 20);
      searchResults = result.sounds;
    }
  }
} catch (error) {
  console.error('Error fetching search results:', error);
}
---

<Layout
  title={searchQuery ? `Search Results for "${searchQuery}" | SoundBoard Go` : 'Search Sounds | SoundBoard Go'}
  description={searchQuery ? `Search results for "${searchQuery}". Find the perfect sound effect for your project.` : 'Search for sound effects and audio clips on SoundBoard Go.'}
  keywords={`search, ${searchQuery}, sound effects, audio clips, soundboard`}
  type="website"
  canonicalURL={Astro.site ? new URL(`/search?q=${encodeURIComponent(searchQuery)}`, Astro.site).href : undefined}
>
  <!-- Search Section -->
  <SearchSection client:load initialQuery={searchQuery} />

  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {searchQuery || categoryId ? (
        <>
          <div class="mb-10 text-center">
            <div class="inline-flex items-center justify-center w-12 h-12 bg-primary-100 rounded-full mb-4">
              <svg
                class="w-6 h-6 text-primary-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                />
              </svg>
            </div>
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">
              {categoryId ? 'Category Sounds' : 'Search Results'}
            </h1>
            <p class="text-gray-600 text-lg">
              {categoryId ? (
                <>Found {searchResults.length} {searchResults.length === 1 ? 'sound' : 'sounds'} in this category{searchQuery && ` matching "${searchQuery}"`}</>
              ) : (
                <>Found {searchResults.length} {searchResults.length === 1 ? 'sound' : 'sounds'} for "
                  <span class="font-semibold text-primary-600">{searchQuery}</span>
                  "{categoryFilter && ` in ${categoryFilter}`}
                </>
              )}
            </p>
          </div>

          {searchResults.length > 0 ? (
            <SoundGrid
              client:load
              initialSounds={searchResults}
              tag={categoryFilter || undefined}
              category={categoryId ? categoryId.toString() : undefined}
            />
          ) : (
            <div class="text-center py-12 bg-gray-50 rounded-2xl border border-dashed border-gray-200">
              <svg
                class="w-16 h-16 text-gray-300 mx-auto mb-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
              <p class="text-gray-500 text-lg mb-2">
                {categoryId ? 'No sounds found in this category' : `No sounds found for "${searchQuery}"`}
              </p>
              <p class="text-gray-400 text-sm">
                Try different keywords or browse categories
              </p>
            </div>
          )}
        </>
      ) : (
        <div class="text-center py-12">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-primary-100 rounded-full mb-4">
            <svg
              class="w-8 h-8 text-primary-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
              />
            </svg>
          </div>
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">Search Sounds</h1>
          <p class="text-gray-600 text-lg">
            Use the search bar above to find sound effects or select a category
          </p>
        </div>
      )}
    </div>
  </section>
</Layout>

