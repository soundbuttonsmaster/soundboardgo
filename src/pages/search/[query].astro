---
import Layout from '@/layouts/Layout.astro';
import SoundGrid from '@/components/SoundGrid';
import SearchSection from '@/components/SearchSection';
import { soundService } from '@/services/sound.service';
import type { SoundButton as SoundButtonType } from '@/types';

// Mark this route as server-rendered (not pre-rendered at build time)
export const prerender = false;

const { query: queryParam } = Astro.params;
const searchQuery = queryParam ? decodeURIComponent(queryParam).trim() : '';

// Redirect to base search page if query is empty (unless category filter is present)
const { category, category_id } = Astro.url.searchParams;
const categoryFilter = category || '';
const categoryId = category_id && !isNaN(Number(category_id)) ? parseInt(category_id) : null;

// If no search query and no category, redirect to base search page
if (!searchQuery && !categoryId) {
  return Astro.redirect('/search');
}

let searchResults: SoundButtonType[] = [];
let totalCount: number = 0;
let hasMore: boolean = false;

try {
  if (searchQuery) {
    // Use the new search API endpoint
    const result = await soundService.searchSoundsByName(searchQuery, 1, 20);
    searchResults = result.sounds;
    totalCount = result.count || result.sounds.length;
    hasMore = result.hasMore;
    
    // If category filter is provided, filter results client-side
    if (categoryFilter || categoryId) {
      searchResults = searchResults.filter((sound) => {
        if (categoryId && sound.category_id === categoryId) {
          return true;
        }
        if (categoryFilter && sound.category_name?.toLowerCase().includes(categoryFilter.toLowerCase())) {
          return true;
        }
        if (categoryFilter && sound.tag?.toLowerCase().includes(categoryFilter.toLowerCase())) {
          return true;
        }
        return false;
      });
    }
  } else if (categoryId) {
    // If no search query but category is provided, fetch sounds by category
    searchResults = await soundService.getSounds({ category: categoryId });
    totalCount = searchResults.length;
  }
} catch (error) {
  console.error('Error fetching search results:', error);
}
---

<Layout
  title={searchQuery ? `Search Results for "${searchQuery}" | SoundBoard Go` : 'Search Sounds | SoundBoard Go'}
  description={searchQuery ? `Search results for "${searchQuery}". Find the perfect sound effect for your project.` : 'Search for sound effects and audio clips on SoundBoard Go.'}
  keywords={`search, ${searchQuery}, sound effects, audio clips, soundboard`}
  type="website"
  canonicalURL={Astro.site ? new URL(`/search/${encodeURIComponent(searchQuery)}`, Astro.site).href : undefined}
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 text-white py-8 md:py-10 overflow-hidden">
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
      <!-- Gradient Orbs -->
      <div class="absolute -top-20 -right-20 w-96 h-96 bg-primary-400 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse"></div>
      <div class="absolute -bottom-20 -left-20 w-96 h-96 bg-primary-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse" style="animation-delay: 2s;"></div>
      
      <!-- Pattern Overlay -->
      <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
      
      <!-- Wave Pattern -->
      <div class="absolute bottom-0 left-0 right-0 h-24">
        <svg class="absolute bottom-0 w-full h-full" viewBox="0 0 1200 120" preserveAspectRatio="none">
          <path d="M0,60 C300,20 600,100 900,50 C1050,30 1150,70 1200,50 L1200,120 L0,120 Z" fill="white" opacity="0.1"></path>
        </svg>
      </div>
    </div>

    <div class="relative max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <div class="mb-3 flex justify-center">
          <div class="relative">
            <!-- Glowing effect behind icon -->
            <div class="absolute inset-0 bg-white/20 rounded-full blur-xl animate-pulse"></div>
            <div class="relative bg-white/15 backdrop-blur-md rounded-2xl p-3 border border-white/20 shadow-lg">
              <svg
                class="w-10 h-10 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                />
              </svg>
            </div>
          </div>
        </div>
        <h1 class="text-2xl md:text-4xl font-bold mb-2 drop-shadow-lg">
          {searchQuery ? `Search Results for "${searchQuery}"` : 'Search Sounds'}
        </h1>
        <p class="text-base md:text-lg text-primary-100 mb-6 max-w-xl mx-auto drop-shadow">
          {searchQuery ? (
            <>Found {totalCount} {totalCount === 1 ? 'sound' : 'sounds'} matching your search</>
          ) : (
            <>Discover and play high-quality sound effects</>
          )}
        </p>
        
        <!-- Search Field in Hero Section -->
        <div class="mt-6 max-w-2xl mx-auto">
          <SearchSection client:load variant="hero" initialQuery={searchQuery} />
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {searchQuery || categoryId ? (
        <>
          {searchResults.length > 0 ? (
            <SoundGrid
              client:load
              initialSounds={searchResults}
              tag={categoryFilter || undefined}
              category={categoryId ? categoryId.toString() : undefined}
            />
          ) : (
            <div class="text-center py-12 bg-gray-50 rounded-2xl border border-dashed border-gray-200">
              <svg
                class="w-16 h-16 text-gray-300 mx-auto mb-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
              <p class="text-gray-500 text-lg mb-2">
                {categoryId ? 'No sounds found in this category' : `No sounds found for "${searchQuery}"`}
              </p>
              <p class="text-gray-400 text-sm">
                Try different keywords or browse categories
              </p>
            </div>
          )}
        </>
      ) : (
        <div class="text-center py-12">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-primary-100 rounded-full mb-4">
            <svg
              class="w-8 h-8 text-primary-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
              />
            </svg>
          </div>
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">Search Sounds</h1>
          <p class="text-gray-600 text-lg">
            Use the search bar above to find sound effects or select a category
          </p>
        </div>
      )}
    </div>
  </section>
</Layout>

