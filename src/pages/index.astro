---
import Layout from '@/layouts/Layout.astro';
import HomeSoundGrid from '@/components/HomeSoundGrid';
import SearchSection from '@/components/SearchSection';
import { soundService } from '@/services/sound.service';
import type { SoundButton as SoundButtonType } from '@/types';

// SSR: Fetch initial data on the server (36 sounds = 9 columns Ã— 4 rows)
let newSounds: SoundButtonType[] = [];
let trendingSounds: SoundButtonType[] = [];

// Fetch each data source independently so one failure doesn't affect others
try {
  const newSoundsResult = await soundService.getNewSounds(undefined, 1, 36);
  newSounds = newSoundsResult.sounds;
} catch (error) {
  console.error('Error fetching new sounds:', error);
  newSounds = [];
}

try {
  const trendingSoundsResult = await soundService.getTrendingSounds(undefined, 1, 36);
  trendingSounds = trendingSoundsResult.sounds;
} catch (error) {
  console.error('Error fetching trending sounds:', error);
  trendingSounds = [];
}
---

<Layout
  title="Meme Soundboard with Sound Buttons Unblocked - SoundBoard Go"
  description="Explore Soundboard Go - the ultimate soundboard unblocked platform with thousands of meme soundboard and sound buttons. Play sound effects instantly and free!"
  keywords="sound effects, free sounds, audio clips, soundboard, sound library, sound fx, audio effects, sound effects library, free audio, sound samples, meme soundboard, sound buttons unblocked"
  type="website"
>
  <!-- Hero Section (compact height) -->
  <section class="relative bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 text-white py-3 md:py-4 overflow-hidden">
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
      <!-- Gradient Orbs -->
      <div class="absolute -top-20 -right-20 w-96 h-96 bg-primary-400 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse"></div>
      <div class="absolute -bottom-20 -left-20 w-96 h-96 bg-primary-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse" style="animation-delay: 2s;"></div>
      
      <!-- Pattern Overlay -->
      <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
      
      <!-- Wave Pattern -->
      <div class="absolute bottom-0 left-0 right-0 h-24">
        <svg class="absolute bottom-0 w-full h-full" viewBox="0 0 1200 120" preserveAspectRatio="none">
          <path d="M0,60 C300,20 600,100 900,50 C1050,30 1150,70 1200,50 L1200,120 L0,120 Z" fill="white" opacity="0.1"></path>
        </svg>
      </div>
    </div>

    <div class="relative max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <div class="mb-3 flex justify-center">
          <div class="relative">
            <!-- Glowing effect behind icon -->
            <div class="absolute inset-0 bg-white/20 rounded-full blur-xl animate-pulse"></div>
            <div class="relative bg-white/15 backdrop-blur-md rounded-2xl p-3 border border-white/20 shadow-lg">
              <svg
                class="w-10 h-10 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"
                />
              </svg>
            </div>
          </div>
        </div>
        <h1 class="text-2xl md:text-4xl font-bold mb-2 drop-shadow-lg">
          Soundboard Go: Play Meme Soundboard & Sound Buttons Instantly
        </h1>
        <p class="text-base md:text-lg text-primary-100 mb-6 max-w-xl mx-auto drop-shadow">
          Soundboard Go offers the biggest collection of sound buttons and meme soundboard unblocked with endless sound effects and thousands of viral soundboards.
        </p>
        
        <!-- Search Field in Hero Section -->
        <div class="mt-6 max-w-2xl mx-auto">
          <SearchSection client:load variant="hero" />
        </div>
      </div>
    </div>
  </section>


  <!-- New Sounds Section -->
  <section class="py-16 bg-white" id="new-sounds-section">
    <div class="max-w-screen-xl mx-auto px-2 sm:px-6 lg:px-10">
      <div class="mb-10 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">New Sounds</h2>
        <p class="text-gray-600 text-lg">Latest additions to our collection</p>
      </div>
      {newSounds.length > 0 ? (
      <HomeSoundGrid
        client:load
        sounds={newSounds}
        viewMoreUrl="/new"
      />
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500">No new sounds available at the moment.</p>
        </div>
      )}
    </div>
  </section>

  <!-- Trending Sounds Section -->
  <section class="py-16 bg-gradient-to-b from-gray-50 to-white" id="trending-sounds-section">
    <div class="max-w-screen-xl mx-auto sm:px-2 lg:px-4 p-0 m-0">
      <div class="mb-10 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">Trending Sounds</h2>
        <p class="text-gray-600 text-lg">Most played sounds this week</p>
      </div>
      {trendingSounds.length > 0 ? (
      <HomeSoundGrid
        client:load
        sounds={trendingSounds}
        viewMoreUrl="/trending"
      />
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500">No trending sounds available at the moment.</p>
        </div>
      )}
    </div>
  </section>

</Layout>

